<% layout('layouts/boilerplate') %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Register</h1>

      <form
        action="/register"
        novalidate
        class="needs-validation"
        method="POST"
      >
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            class="form-control"
            type="text"
            id="username"
            name="username"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            class="form-control"
            type="email"
            id="email"
            name="email"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            class="form-control"
            type="password"
            id="password"
            name="password"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <button class="btn btn-success">Register</button>
      </form>
    </div>
  </div>
</div>
