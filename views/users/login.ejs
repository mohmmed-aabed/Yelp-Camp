<% layout('layouts/boilerplate') %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Login</h1>

      <form action="/login" novalidate class="needs-validation" method="POST">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            class="form-control"
            type="text"
            id="username"
            name="username"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            class="form-control"
            type="password"
            id="password"
            name="password"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <button class="btn btn-success">Login</button>
      </form>
    </div>
  </div>
</div>
